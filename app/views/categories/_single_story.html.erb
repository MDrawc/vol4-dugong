<div class="card border-<%= hlp_class %>" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= story.title %>
      by
      <%= link_to User.find(story.user_id).username, user_path(story.user_id) %>
    <h6 class="card-subtitle mb-2 text-muted">Location</h6>
    <p class="card-text"><%= story.text %></p>

    <% if story.picture.attached? %>
      <%= image_tag story.picture, :class => "card-img-top" %>
    <% end %>

    <p class="card-text">
      <small class="text-muted">Created:
        <%= story.created_at.strftime("%Y-%m-%d").to_s %></small>
    </p>
    <div class="btn-group" role="group" aria-label="Basic example">
      <%= link_to "View", category_story_path(story.category_id, story.id), class: "btn btn-outline-primary" %>
      <%= link_to raw("&#8595;"), category_story_down_path(story.category_id, story.id), method: :post, class: "btn btn-secondary" %>
      <%= link_to raw("&#8593;"), category_story_up_path(story.category_id, story.id), method: :post, class: "btn btn-" + hlp_class %>
    </div>
    <br>
    <br>
  </div>
</div>
