<% unless @user == current_user %>
	<span class="follows" id="#user_<%= @user.id %>">
		<% if current_user.follow?(@user) %>
			<%= link_to 'Unfollow', unfollow_user_path(@user.id),
			class: 'btn unfollow-btn btn-sm',
			id: 'unfollow-button',
			method: :post,
			remote: true %>
		<% else %>
			<%= link_to 'Follow', follow_user_path(@user.id),
			class: 'btn follow-btn btn-sm',
			id: 'follow-button',
			method: :post,
			remote: true %>
		<% end %>
	</span>
<% end %>
